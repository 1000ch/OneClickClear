{
	"name": "OneClickClear",
	"version": "0.2.0",
	"manifest_version": 2,
	"description": "This extension provides an easy way to clear browser history.",
	"permissions": ["history"],
	"background": {
		"scripts": ["js/main.js"]
	},
	"browser_action": {
		"default_icon": "img/trash.ico",
		"default_title": "OneClickClear"
	}
}